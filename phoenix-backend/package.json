{
  "name": "phoenix-backend",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node server.js",
    "start:prod": "cross-env NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "cleanup:uploads": "node scripts/cleanup-uploads.js",
    "cleanup:uploads:dry": "cross-env DRY_RUN=1 node scripts/cleanup-uploads.js",
    "cleanup:uploads:30d": "cross-env KEEP_DAYS=30 node scripts/cleanup-uploads.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "seed": "node prisma/seed.js",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.3",
    "mime-types": "^3.0.1",
    "mongoose": "^8.18.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "prisma": "^6.16.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
